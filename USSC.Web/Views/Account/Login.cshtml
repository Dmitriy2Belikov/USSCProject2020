
@{
    ViewData["Title"] = "Login";
}

@model USSC.Web.ViewModels.LoginViewModel

<h1 class="display-4">Вход</h1>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group col-lg-4">
            <label asp-for="Email">Введите Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span class="invalid-feedback" asp-validation-for="Email" />
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="Password">Введите пароль</label>
            <input class="form-control" asp-for="Password" />
            <span class="invalid-feedback" asp-validation-for="Password" />
        </div>
        <div class="form-group col-lg-3">
            <input class="btn btn-lg btn-block btn-outline-primary" type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>