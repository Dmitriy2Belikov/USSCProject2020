
@{
    ViewData["Title"] = "Добавить роль";
}
@model PostRoleViewModel

<h1 class="display-4">Добавление роли</h1>

<form asp-action="AddRole" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group col-lg-4">
            <label asp-for="Name">Введите имя роли</label><br />
            <input class="form-control" type="text" asp-for="Name" value="@Model.Name" />
            <span class="invalid-feedback" asp-validation-for="Name" />
        </div>

        <div class="form-group col-lg-4">
            <label asp-for="SubsystemAccesses">Выберите доступные этой роли подсистемы</label><br />
            @for (var i = 0; i < Model.SubsystemAccesses.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="SubsystemAccesses[i].IsOptionSelected" 
                           checked="@Model.SubsystemAccesses[i].IsOptionSelected" />
                    <input type="text" asp-for="SubsystemAccesses[i].Name" value="@Model.SubsystemAccesses[i].Name" hidden />
                    <label class="form-check-label" asp-for="SubsystemAccesses[i].IsOptionSelected">@Model.SubsystemAccesses[i].Name</label>
                </div>
            }

            <span class="invalid-feedback" asp-validation-for="SubsystemAccesses" />
        </div>
        
        <div class="form-group col-lg-3">
            <input type="submit" class="btn btn-lg btn-block btn-outline-primary" value="Добавить" />
        </div>
    </div>
</form>
