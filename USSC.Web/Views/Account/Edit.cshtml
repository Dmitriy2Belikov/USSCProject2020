
@{
    ViewData["Title"] = "Edit";
}
@model RegistrationViewModel

<h1 class="display-4">Редактирование</h1>

<form asp-action="Edit" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group col-lg-4">
            <label asp-for="Email">Введите Email</label><br />
            <input class="form-control" type="text" asp-for="Email" value="@Model.Email"/>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="Name">Введите Имя</label><br />
            <input class="form-control" type="text" asp-for="Name" value="@Model.Name"/>
            <span class="invalid-feedback" asp-validation-for="Name" />
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="LastName">Введите Фамилию</label><br />
            <input class="form-control" type="text" asp-for="LastName" value="@Model.LastName"/>
            <span class="invalid-feedback" asp-validation-for="LastName" />
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="Roles">Выберите роли</label><br />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Roles[i].IsOptionSelected" checked="@Model.Roles[i].IsOptionSelected"/>
                    <input type="text" asp-for="Roles[i].RoleName" value="@Model.Roles[i].RoleName" hidden />
                    <label class="form-check-label" asp-for="Roles[i].IsOptionSelected">@Model.Roles[i].RoleName</label>
                </div>
            }

            <span class="invalid-feedback" asp-validation-for="Roles" />
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="Password">Введите пароль</label><br />
            <input class="form-control" asp-for="Password" />
            <span class="invalid-feedback" asp-validation-for="Password" />
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span class="invalid-feedback" asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group col-lg-3">
            <input type="submit" class="btn btn-lg btn-block btn-outline-primary" value="Сохранить" />
        </div>
    </div>
</form>