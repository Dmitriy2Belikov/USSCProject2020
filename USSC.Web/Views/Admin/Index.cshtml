
@{
    ViewData["Title"] = "Администрирование";
}

@model IEnumerable<UserViewModel>

    <h1 class="display-4">Подсистема «Администрирование»</h1>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>ФИО</th>
            <th>Роли</th>
            <th>Доступы</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.Roles</td>
                <td>@user.Accesses</td>
            </tr>
        }
    </table>

<a class="btn btn-outline-primary" asp-controller="Account" asp-action="Registration">Зарегистрировать пользователя</a>